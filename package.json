  "app": "dist/issue-translator.js",
  "private": true,
  "targets": {
    "app": {}
  },
  "dependencies": {
    "@swc/helpers": "^0.3.17",
    "escape-string-regexp": "^5.0.0",
    "markdown-it": "^13.0.1",
    "to-markdown": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "chai": "^4.1.2",
    "cpy-cli": "^4.1.0",
    "karma": "^6.3.20",
    "karma-browserify": "^8.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.3",
    "parcel": "^2.6.0",
    "rimraf": "^3.0.2",
    "watchify": "^4.0.0",
    "webpack": "^5.73.0"
  },
  "scripts": {
    "test": "karma start",
    "build": "parcel build src/app.js --detailed-report --no-source-maps",
