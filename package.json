{
  "name": "issue-translator-for-github-chrome-extension",
  "version": "0.5.2",
  "description": "Issue Translator for GitHub",
  "main": "background.js",
  "private": true,
  "dependencies": {
    "escape-string-regexp": "^5.0.0",
    "markdown-it": "^13.0.1",
    "to-markdown": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "chai": "^4.1.2",
    "cpy-cli": "^4.1.0",
    "karma": "^6.3.20",
    "karma-browserify": "^8.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.8.1",
    "rimraf": "^3.0.2",
    "watchify": "^4.0.0"
  },
  "scripts": {
    "test": "karma start",
    "build": "parcel build src/app.js -o issue-translator --detailed-report --target browser",
    "clean": "rimraf dist",
    "copy-files": "cpy src/background.js src/manifest.json src/options.html src/options.js icons/*.png src/*.css dist",
    "prebuild": "npm run clean && npm run copy-files"
  },
  "repository": {
